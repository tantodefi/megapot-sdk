# Required environment variables
WALLET_KEY=your_private_key_here
REFERRER_ADDRESS=your_referrer_address_here

# Optional environment variables
MEGAPOT_DATA_API_KEY=your_api_key_here

# Paymaster URL (optional) - for sponsoring gas fees
# Example: https://api.pimlico.io/v1/base/rpc?apikey=YOUR_API_KEY
# PAYMASTER_URL=https://your-paymaster-url.com/rpc

# Paymaster settings (optional)
# PAYMASTER_MAX_GAS_LIMIT=50000  # Maximum gas to sponsor per transaction
# PAYMASTER_ENABLED=false         # Enable/disable paymaster sponsorship

# Advanced Configuration (for users who want to override defaults)
# Uncomment and modify these values to customize the SDK behavior

# Network Configuration
# BASE_RPC_URL=https://mainnet.base.org
# BASE_CHAIN_ID=8453

# Contract Addresses (Base Mainnet Production)
# MEGAPOT_CONTRACT_ADDRESS=0xbEDd4F2beBE9E3E636161E644759f3cbe3d51B95
# MEGAPOT_USDC_ADDRESS=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913
# SPEND_PERMISSION_MANAGER=0xf85210B21cC50302F477BA56686d2019dC9b67Ad
# JACKPOT_POOL_CONTRACT_ADDRESS=0xfb324c09c16b5f437ff612a4e8bc95b8fd6e6d5a

# SDK Configuration
# MEGAPOT_GAS_LIMIT=150000
# MEGAPOT_MAX_RETRIES=3

# Data API Configuration
# MEGAPOT_API_BASE_URL=https://api.megapot.io
# MEGAPOT_API_TIMEOUT=15000

# Demo Mode (for development)
# NEXT_PUBLIC_DEMO_MODE=false
# NEXT_PUBLIC_PRIVY_APP_ID=your_privy_app_id_here
# NEXT_PUBLIC_CHAIN_ID=8453
# NEXT_PUBLIC_CONTRACT_ADDRESS=0xbEDd4F2beBE9E3E636161E644759f3cbe3d51B95
# NEXT_PUBLIC_ERC20_TOKEN_ADDRESS=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913

# Advanced users can also set these for custom RPC providers
# BASESCAN_API_KEY=your_basescan_api_key
# CUSTOM_RPC_URL=https://your-custom-rpc-url.com
